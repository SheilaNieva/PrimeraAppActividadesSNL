<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnadirContactoActivity"
        android:background="@color/colorAzulClarito">

    <TextView
            android:text="@string/titAnadirContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvContactoTitulo"
            android:textSize="18sp" android:textColor="@color/colorNegro"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"/>
    <TextView
            android:text="@string/introduceNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvContactoNombre"
            android:textColor="@color/colorNegro" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.301" android:layout_marginTop="140dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etContactoNombre"
            android:textSize="14sp" android:hint="Ej: Manuel"
            app:layout_constraintStart_toStartOf="@+id/tvContactoNombre"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoNombre"
            app:layout_constraintEnd_toEndOf="@+id/tvContactoNombre" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.022"/>
    <TextView
            android:text="@string/introduceEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvContactoEmail"
            android:textColor="@color/colorNegro" app:layout_constraintEnd_toEndOf="@+id/tvContactoNombre"
            app:layout_constraintStart_toStartOf="@+id/tvContactoNombre"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoNombre" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etContactoEmail"
            android:textSize="14sp" android:hint="Ej: manu@gmail.com"
            app:layout_constraintStart_toStartOf="@+id/tvContactoEmail"
            app:layout_constraintEnd_toEndOf="@+id/tvContactoEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoEmail" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.034"/>
    <Button
            android:text="Agregar contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnContactoAnadir"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoTitulo" android:layout_marginTop="272dp"
            app:layout_constraintHorizontal_bias="0.432" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.003"/>
</androidx.constraintlayout.widget.ConstraintLayout>